}
100% {
transform: translateX(-100%); /* Back to left */
}
}


/* Keyframes for the fadeIn animation */
@keyframes fadeIn {
0% { opacity: 0; } /* Start with 0 opacity */
100% { opacity: 1; } /* End with full opacity */
}




/* Media Queries for responsiveness */
