}

/* Form inputs */
.form-container input[type="text"],
.form-container input[type="email"],
.form-container input[type="password"],
.form-container input[type="phone"] {
width:400px; /* Full width minus padding */
padding: 8px;
margin-bottom: 1px;
font-size: 15px;
border: 1px solid #ccc; /* Light gray border */

box-sizing: border-box; /* Include padding in width */
}



/* Form submit button */
.form-container button {
width: 180px;
padding: 12px;
background-color: #020c03; /* Green background */
color: white;
border: none;

cursor: pointer;
font-size: 16px;
position: relative;
left: 110px;
margin-top: 10px;
}


.form-container button:hover {
background-color: #dd752b; /* Darker green on hover */
}

/* Responsive adjustments */
@media (max-width: 600px) {
.form-container {
width: 90%;
}
}




/* Reset default margin and padding for all elements */
* {
margin: 0;
padding: 0;
box-sizing: border-box;
}

/* Style for the footer */
footer {
background-color: #08222d; /* Dark background color */
color: #fff; /* White text color */
padding: 20px 0; /* Padding at the top and bottom */
font-family: Arial, sans-serif;
margin: auto;
width: 100%;
}

/* Container for footer content */
.footer-content {
display: flex; /* Use flexbox for layout */
justify-content: space-around; /* Evenly distribute items */
flex-wrap: wrap; /* Allow items to wrap to the next line */
}

/* Sections within the footer (About, Contact, Social) */
.footer-section {
flex: 1; /* Each section takes equal space */
padding: 10px;
}

.footer-section h3 {
color: #fff; /* White text color for section headings */
margin-bottom: 10px;
}

.footer-section p {
font-size: 14px;
line-height: 1.6;
}

/* Social icons */
.footer-section .social ul {
list-style-type: none;
padding: 0;
display: flex;
}

.footer-section .social ul li {
margin-right: 10px;
}

.footer-section .social ul li a {
color: #fff; /* White color for social icons */
font-size: 18px;
transition: color 0.3s ease;
}

.footer-section .social ul li a:hover {
color: #ffd700; /* Change color on hover (gold) */
}

/* Bottom section of the footer */
.footer-bottom {
background-color: #222; /* Darker background color */
